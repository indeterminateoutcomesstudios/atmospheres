{{#each model as |sound|}}
  <li class="{{if sound.playing 'active'}}">
    <span class="name" {{action (route-action 'play' sound)}}>
      <button class="icon">
        {{icon 'stop' class='stop'}}
        {{icon 'play' class='play'}}
      </button>
      <span>{{sound.name}}</span>
    </span>
    <span>
      {{input type='range' min=0 max=1 step=0.01 value=sound.volume}}
      {{#if hasBlock}}{{yield sound}}{{/if}}
    </span>
  </li>
{{/each}}
{{#unless model.length}}
  <li class="de-em">Nothing to show.</li>
{{/unless}}

